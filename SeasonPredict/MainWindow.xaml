        <ListBox x:Name="playersListbox" SelectionChanged="PlayersListbox_OnSelectionChanged"  HorizontalAlignment="Left" Height="186" Margin="309,10,0,0" VerticalAlignment="Top" Width="256"/>
    </Grid>
</Window>
